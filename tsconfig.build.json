{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "noEmit": false,
    "composite": true,
    "paths": {
      "@theme-wind": ["src"],
      "@theme-wind/*": ["src/*"]
    }
  },
  "include": ["./src", "./src/*.d.ts"],
  "exclude": ["node_modules", "**/__tests__/**", "**/tests/**", "docs"]
}
